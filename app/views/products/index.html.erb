<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  <%= f.label :p_code, "品名コード" %>
  <%= f.search_field :p_code_cont %>

  <%= f.label :cust, "受注先" %>
  <%= f.search_field :cust_cont %>

  <%= f.label :supp, "仕入先" %>
  <%= f.search_field :supp_cont %>

  <%= f.label :p_name, "品名" %>
  <%= f.search_field :p_name_cont_all %>

  <%= f.submit "検索" %>
<% end %>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>品名コード</th>
      <th>品名</th>
      <th>受注先</th>
      <th>仕入先</th>
      <th>備考</th>
      <th>更新日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.p_code, product %></td>
        <td><%= link_to product.p_name, product %></td>
        <td><%= product.cust %></td>
        <td><%= product.supp %></td>
        <td><%= product.comment %></td>
        <td><%= product.updated_at %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
